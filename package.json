{
  "name": "dm-chall",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "",
  "author": "Geovani da Silva Junior",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "mocha --exit --timeout 10000 dist/test/unit_tests",
    "start": "yarn run build && yarn run watch",
    "debug": "yarn run build && yarn run watch-debug",
    "build": "yarn run build-ts",
    "build-ts": "yarn tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve\"",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "serve": "nodemon --delay 5 dist/src/index.js",
    "serve-debug": "nodemon --inspect dist/src/index.js",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": ""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv": "^5.5.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.4",
    "@types/pg": "^8.6.1",
    "@types/pg-format": "^1.0.2",
    "c8": "^7.10.0",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
